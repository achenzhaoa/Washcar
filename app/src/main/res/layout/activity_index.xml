<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="qinyou.com.washcar.IndexActivity"
    android:id="@+id/index_drawer">

    <RelativeLayout android:orientation="vertical" android:background="@color/ghostwhite" android:layout_width="fill_parent" android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="0.0dip" android:layout_height="80.0dip" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="2.5">
                <TextView android:textSize="@dimen/h1" android:textColor="@color/font_blue" android:id="@+id/homeitem_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="24°晴" />
                <TextView android:textSize="@dimen/h3" android:textColor="@color/black"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="随时随地专业洗车" />
            </LinearLayout>

            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.5">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hasnext" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/weather" android:layout_width="fill_parent" android:layout_height="100.0dip">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:id="@+id/home_weather_icon" android:layout_width="40.0dip" android:layout_height="40.0dip" android:scaleType="fitCenter" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="3.0">
                <TextView android:textSize="@dimen/h4" android:textColor="@color/black" android:id="@+id/home_weather_car" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/h4" android:textColor="@color/black" android:id="@+id/home_weather_num" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/home_carwash" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/weather">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="0.0dip" android:layout_height="80.0dip" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:background="@drawable/app_12" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="2.5">
                <TextView android:textSize="@dimen/h1" android:textColor="@color/font_green" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="到店洗车" />
                <TextView android:textSize="@dimen/h3" android:textColor="@color/text_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="家公司附近顺道洗车" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.5">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hasnext" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/home_bespeak" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dip" android:layout_below="@id/home_carwash">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="0.0dip" android:layout_height="90.0dip" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:background="@drawable/app_10" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="2.5">
                <TextView android:textSize="@dimen/h1" android:textColor="@color/font_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上门洗车" />
                <TextView android:textSize="@dimen/h3" android:textColor="@color/text_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="随时随地专业洗车" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.5">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hasnext" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/home_order" android:background="@color/white" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="80.0dip" android:layout_marginTop="15.0dip" android:layout_below="@id/home_bespeak">
            <View android:background="@color/orange" android:layout_width="5.0dip" android:layout_height="fill_parent" />
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:paddingLeft="50.0dip" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="2.5">
                <TextView android:textSize="@dimen/h3" android:textColor="@color/black" android:id="@+id/home_order_date" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textSize="@dimen/h3" android:textColor="@color/black" android:id="@+id/home_order_user" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:id="@+id/home_order_call" android:layout_width="40.0dip" android:layout_height="40.0dip" android:src="@drawable/home_phone_icon" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.5">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hasnext" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/home_server" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="40.0dip" android:layout_marginTop="10.0dip" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0">
                <ImageView android:layout_gravity="center" android:id="@+id/homeitem_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/app_15" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="2.5">
                <TextView android:textSize="@dimen/h3" android:textColor="@color/text_gray" android:id="@+id/homeitem_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="我们的服务介绍" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.5">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/hasnext" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/index_left_menu"
        android:name="qinyou.com.washcar.MenuLeftFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT" />

</android.support.v4.widget.DrawerLayout>
